<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.codeterps.streetfighterframedojo.activity.ProfileActivity">

    <ImageView
        android:id="@+id/account_profile_pic"
        android:layout_width="fill_parent"
        android:layout_height="240dp"
        android:alpha=".4"
        android:background="@android:color/white"
        android:elevation="@dimen/default_elevation"
        android:src="@drawable/ken"
        android:transitionName="profile_pic"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tranparent_grey"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/AppTheme"/>

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/account_profile_pic"
        android:background="@color/background_dark"/>

    <TextView
        android:id="@+id/account_profile_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/account_profile_pic"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:alpha="1.0"
        android:text="@string/username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:transitionName="profile_username"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:text="User notes go here."
        android:textColor="@color/dark_text_color"/>


</RelativeLayout>
